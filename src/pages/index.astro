// Obten√ß√£o da data/hora/localiza√ß√£o
function getObsParams() {
  const date = document.getElementById("obsDateTime").value ? new Date(document.getElementById("obsDateTime").value) : new Date();
  const lat = parseFloat(document.getElementById("obsLat").value) || 38.72;
  const lng = parseFloat(document.getElementById("obsLng").value) || -9.14;
  return { date, lat, lng };
}

// Preenche dropdown com objetos vis√≠veis
function fillObsDropdown() {
  const sel = document.getElementById("obsObjectSelect");
  sel.innerHTML = "";
  const params = getObsParams();
  const now = params.date;
  const lst = [];

  // Planetas/Sol/Lua sempre vis√≠veis (mas filtra por Altitude depois)
  planetsList.forEach(p => lst.push({ id: p.id, name: p.name, type: "planet" }));

  // Messier: todos (podes filtrar por magnitude/dist depois)
  messierCatalog.forEach(m => lst.push({ id: m.id, name: m.name, type: "messier" }));

  // Cria op√ß√µes (mais tarde podemos filtrar os que est√£o abaixo do horizonte)
  lst.forEach(o => {
    const option = document.createElement("option");
    option.value = o.id;
    option.textContent = o.name + (o.type === "messier" ? ` (${o.id})` : "");
    sel.appendChild(option);
  });
}

// Detetar localiza√ß√£o
document.getElementById("obsGeoBtn").onclick = function() {
  if ("geolocation" in navigator) {
    navigator.geolocation.getCurrentPosition(pos => {
      document.getElementById("obsLat").value = pos.coords.latitude.toFixed(2);
      document.getElementById("obsLng").value = pos.coords.longitude.toFixed(2);
      fillObsDropdown();
      showObsCard();
    });
  }
};

