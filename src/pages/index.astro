  { id: "M42", name: "Orion Nebulosa", ra: 5.591, dec: -5.389, mag: 4.0, dist: 1350, dist_unit: "ly" }, // M42
  { id: "M13", name: "H√©rcules Globular", ra: 16.698, dec: 36.467, mag: 5.8, dist: 25000, dist_unit: "ly" } // M13
