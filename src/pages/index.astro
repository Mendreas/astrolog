  { id: "moon", name: "Lua" },
  { id: "mercury", name: "Merc√∫rio" },
  { id: "venus", name: "V√©nus" },
  { id: "mars", name: "Marte" },
  { id: "jupiter", name: "J√∫piter" },
  { id: "saturn", name: "Saturno" },
  { id: "uranus", name: "√örano" },
  { id: "neptune", name: "Neptuno" }
];

// Carrega cat√°logo Messier da API p√∫blica
let messierCatalog = [];
fetch("https://osricdienda.com/messier/api/all")
  .then(resp => resp.json())
  .then(data => {
    messierCatalog = data;
    fillObsDropdown();
    showObsCard();
  });

// Leitura dos par√¢metros atuais
function getObsParams() {
  const date = document.getElementById("obsDateTime").value ? new Date(document.getElementById("obsDateTime").value) : new Date();
  const lat = parseFloat(document.getElementById("obsLat").value) || 38.72;
  const lng = parseFloat(document.getElementById("obsLng").value) || -9.14;
  return { date, lat, lng };
}

// Preenche o dropdown (planetas + messier)
function fillObsDropdown() {
  const sel = document.getElementById("obsObjectSelect");
  if (!sel) return;
  sel.innerHTML = "";
  planetsList.forEach(p => {
    const option = document.createElement("option");
    option.value = p.id;
    option.textContent = p.name;
    sel.appendChild(option);
  });
  if (messierCatalog && messierCatalog.length > 0) {
    messierCatalog.forEach(obj => {
      const option = document.createElement("option");
      option.value = obj.messier.replace("M", "m"); // id ex: m1, m31, etc.
      option.textContent = `${obj.name} (${obj.messier})`;
      sel.appendChild(option);
    });
  }
}

// Detetar localiza√ß√£o
document.getElementById("obsGeoBtn").onclick = function() {
  if ("geolocation" in navigator) {
    navigator.geolocation.getCurrentPosition(pos => {
      document.getElementById("obsLat").value = pos.coords.latitude.toFixed(2);
      document.getElementById("obsLng").value = pos.coords.longitude.toFixed(2);
      showObsCard();
    });
  }
};

// Atualizar hora agora
document.getElementById("obsRefreshBtn").onclick = function() {
  document.getElementById("obsDateTime").value = new Date().toISOString().slice(0,16);
  showObsCard();
};

// Atualiza info ao mudar par√¢metros
["obsDateTime", "obsLat", "obsLng", "obsObjectSelect"].forEach(id => {
  document.getElementById(id).onchange = showObsCard;
});

// Cria cart√£o visual
function showObsCard() {
  const { date, lat, lng } = getObsParams();
  const objId = document.getElementById("obsObjectSelect").value;
  let card = "";
  const pl = planetsList.find(x => x.id === objId);
  if (pl) {
    // Astronomy Engine: efem√©rides reais
    const observer = new Astronomy.Observer(lat, lng, 0);
    let body = Astronomy.Body[pl.id.charAt(0).toUpperCase() + pl.id.slice(1)];
    if (pl.id === "sun") body = Astronomy.Body.Sun;
    if (pl.id === "moon") body = Astronomy.Body.Moon;
    // RA/DEC
    const eq = Astronomy.Equator(body, date, observer, true, true);
    // Alt/Az
    const hor = Astronomy.Horizontal(date, observer, eq.ra, eq.dec, "normal");
    // Nascimento/Ocaso (aten√ß√£o: pode devolver null)
    const rise = Astronomy.SearchRiseSet(body, observer, +1, date, 300);
    const set = Astronomy.SearchRiseSet(body, observer, -1, date, 300);
    // Magnitude: exemplo aproximado, usar lib para real se quiseres
